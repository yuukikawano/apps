<%= form_with(model: @movie, local: true) do |form| %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>

  <div class="field">
    <%= form.label :movie %>
    <%= form.file_field :movie %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
