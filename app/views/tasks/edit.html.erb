<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>

  <%= f.label :memo %>
  <%= f.text_field :memo, class: "form-control" %>

  <%= f.label :due %>
  <%= f.text_field :due, class: "form-control" %>

  <%= f.submit "update tasks" %>
<% end %>